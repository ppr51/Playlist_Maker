<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainActivityButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/main_layout_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginVertical">@dimen/main_bt_lay_margine_vertical</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="cornerRadius">@dimen/radius_button_corners</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/text_22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="SettingsActivity_FrameLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_item_height</item>
        <item name="android:layout_marginStart">@dimen/settings_item_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/settings_item_margin_end</item>
    </style>
    <style name="SettingsActivity_themeSwithcher_style">
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="thumbTint">@color/yp_blue</item>
        <item name="trackTint">@color/yp_blue_light</item>
    </style>
    <style name="SettingsActivity_TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="SettingsActivity_ButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">@dimen/settings_icon_button_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:backgroundTint">@color/yp_black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:outlineSpotShadowColor">@color/yp_black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/yp_text_gray</item>
        <item name="iconPadding">@dimen/settings_button_icon_padding</item>
    </style>
    <style name="SettingsActivity_BackButtonStyle" parent="SettingsActivity_ButtonsStyle">
        <item name="iconTint">@color/yp_white</item>
    </style>

    <style name="SearchLine_LinearLayoutStyle">
        <item name="android:background">@drawable/search_shape</item>
        <item name="android:backgroundTint">@color/yp_white</item>
    </style>
    <style name="SearchLine_PrefixIconStyle">
        <item name="tint">@color/yp_black</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:src">@drawable/vector_search_icon</item>
    </style>
    <style name="SearchLine_EditTextStyle" >
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textColorHint">@color/yp_black</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:background">@null</item>
    </style>
    <style name="SearchLine_ClearButton_Style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:outlineSpotShadowColor">@color/yp_white</item>
        <item name="icon">@drawable/vector_clear_search</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="iconSize">@dimen/search_clearButton_iconSize</item>
    </style>

    <style name="searchHistoryTitle_style">
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">@dimen/text_19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="Search_CardView_ImageAlbum_Style">
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="cardElevation">0dp</item>
    </style>
    <style name="Search_ImageAlbum_Style">
        <item name="android:src">@drawable/vector_placeholder</item>
    </style>
    <style name="Search_TrackName_Style">
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="Search_ArtistName_Style">
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">@dimen/text_11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="Search_dotImage_Style">
        <item name="android:src">@drawable/vector_dot</item>
        <item name="tint">@color/yp_white</item>
    </style>
    <style name="Search_arrowForward_Style">
        <item name="android:src">@drawable/vector_arrow_forward</item>
        <item name="tint">@color/yp_white</item>
    </style>
    <style name="clearSearchHistoryButton_style" parent="Widget.MaterialComponents.Button.UnelevatedButton" >
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="cornerRadius">@dimen/search_update_button_corner_radius</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="Search_Image_Frame_Style">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="Search_Image_Union1_Style">
        <item name="android:src">@drawable/vector_union_1</item>
        <item name="tint">@color/yp_white</item>
