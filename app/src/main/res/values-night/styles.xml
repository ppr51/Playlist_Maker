    <style name="SearchUpdateButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton" >
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="cornerRadius">@dimen/search_update_button_corner_radius</item>
        <item name="android:textAllCaps">false</item>
