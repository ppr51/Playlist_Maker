<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainActivityButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/main_layout_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginVertical">@dimen/main_bt_lay_margine_vertical</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="cornerRadius">@dimen/radius_button_corners</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/text_22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="SettingsActivity_FrameLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_item_height</item>
        <item name="android:layout_marginStart">@dimen/settings_item_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/settings_item_margin_end</item>
    </style>
    <style name="SettingsActivity_TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="SettingsActivity_ButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">@dimen/settings_icon_button_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:backgroundTint">@color/yp_black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:outlineSpotShadowColor">@color/yp_black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/yp_text_gray</item>
        <item name="iconPadding">@dimen/settings_button_icon_padding</item>
    </style>
    <style name="SettingsActivity_BackButtonStyle" parent="SettingsActivity_ButtonsStyle">
        <item name="iconTint">@color/yp_white</item>
    </style>

    <style name="SearchActivity_FrameStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/search_frame_item_height</item>
    </style>
    <style name="SearchLine_LinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/search_item_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/search_item_margin_end</item>
        <item name="android:layout_marginTop">@dimen/search_string_margin_bottom_top</item>
        <item name="android:layout_marginBottom">@dimen/search_string_margin_bottom_top</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/search_shape</item>
        <item name="android:backgroundTint">@color/yp_white</item>
    </style>
    <style name="SearchLine_PrefixIconStyle">
        <item name="android:layout_width">@dimen/search_prefix_icon_side_size</item>
        <item name="android:layout_height">@dimen/search_prefix_icon_side_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerInside</item>
        <item name="tint">@color/yp_black</item>
        <item name="android:backgroundTint">@color/yp_black</item>
        <item name="android:layout_marginLeft">@dimen/search_prefix_icon_margin_left</item>
        <item name="android:layout_marginRight">@dimen/search_prefix_icon_margin_right</item>
        <item name="android:layout_marginTop">@dimen/search_prefix_icon_margin_bottom_top</item>
        <item name="android:layout_marginBottom">@dimen/search_prefix_icon_margin_bottom_top</item>
    </style>
    <style name="SearchLine_EditTextStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textColorHint">@color/yp_black</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:maxLength">5</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginTop">@dimen/search_edittext_margin_bottom_top</item>
        <item name="android:layout_marginBottom">@dimen/search_edittext_margin_bottom_top</item>
        <item name="android:layout_marginRight">@dimen/search_edittext_margin_right</item>
    </style>
    <style name="SearchLine_ClearButton_Style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:outlineSpotShadowColor">@color/yp_white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="iconPadding">@dimen/settings_button_icon_padding</item>
    </style>
</resources>