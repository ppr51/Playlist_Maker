<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainActivityButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/main_layout_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginVertical">@dimen/main_bt_lay_margine_vertical</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="cornerRadius">@dimen/radius_button_corners</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/text_22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="SettingsActivity_FrameLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_item_height</item>
        <item name="android:layout_marginStart">@dimen/settings_item_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/settings_item_margin_end</item>
    </style>
    <style name="SettingsActivity_TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="SettingsActivity_ButtonsStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">@dimen/settings_icon_button_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:backgroundTint">@color/yp_black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:outlineSpotShadowColor">@color/yp_black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/yp_text_gray</item>
        <item name="iconPadding">@dimen/settings_button_icon_padding</item>
    </style>
    <style name="SettingsActivity_BackButtonStyle" parent="SettingsActivity_ButtonsStyle">
        <item name="iconTint">@color/yp_white</item>
    </style>
</resources>